{
  "name": "tacap",
  "version": "1.0.0",
  "description": "Aplicativo para registro de desempenho em avaliação física de capoeira",
  "main": "electron/main.ts",
  "scripts": {
    "dev:vite": "vite --port 5173",
    "dev:tsc": "tsc -p tsconfig.node.json --watch --preserveWatchOutput",
    "dev:electron": "wait-on http://localhost:5173 electron/dist/main.js && electron electron/dist/main.js",
    "dev": "npx concurrently \"npm run dev:vite\" \"npm run dev:tsc\" \"npm run dev:electron\"",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.node.json && electron-builder",
    "build": "npm run build:vite && npm run build:electron",
    "start": "dist_electron/\"TACAP Setup 1.0.0.exe\""
  },
  "private": true,
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.seuapp.tacap",
    "productName": "TACAP",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico",
      "forceCodeSigning": false
    }
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^24.6.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.5",
    "wait-on": "^9.0.0"
  },
  "dependencies": {
    "@electron/rebuild": "^4.0.1",
    "@vitejs/plugin-react": "^5.0.3",
    "better-sqlite3": "^9.6.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7"
  }
}
